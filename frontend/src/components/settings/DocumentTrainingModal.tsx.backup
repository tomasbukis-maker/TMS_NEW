import React, { useState, useEffect, useCallback, useRef } from 'react';
import { api } from '../../services/api';
import * as pdfjsLib from 'pdfjs-dist';

// Configure PDF.js worker
pdfjsLib.GlobalWorkerOptions.workerSrc = '/pdf.worker.min.mjs';

interface UntrainedAttachment {
  id: number;
  filename: string;
  content_type: string;
  size: number;
  mail_message_id: number;
  mail_message_subject?: string;
  download_url?: string;
}

interface DocumentTemplate {
  id?: number;
  attachment: number;
  document_type: 'invoice' | 'cmr' | 'tir' | 'contract' | 'other';
  template_name: string;
  field_mappings: Record<string, any>;
  confidence_score?: number;
  is_active: boolean;
  created_by_name?: string;
  created_at?: string;
}

interface DocumentTrainingModalProps {
  isOpen: boolean;
  onClose: () => void;
  onSave?: () => void;
}

const DOCUMENT_TYPES = [
  { value: 'invoice', label: 'SƒÖskaita' },
  { value: 'cmr', label: 'CMR va≈ætara≈°tis' },
  { value: 'tir', label: 'TIR dokumentas' },
  { value: 'contract', label: 'Sutartis' },
  { value: 'other', label: 'Kita' },
];

const TRAINING_FIELDS = [
  { key: 'partner_name', label: 'Partnerio pavadinimas' },
  { key: 'invoice_number', label: 'SƒÖskaitos numeris' },
  { key: 'invoice_date', label: 'SƒÖskaitos data' },
  { key: 'amount_net', label: 'Suma (be PVM)' },
  { key: 'vat_rate', label: 'PVM tarifas' },
  { key: 'amount_gross', label: 'Suma su PVM' },
  { key: 'due_date', label: 'Apmokƒóti iki' },
  { key: 'payment_terms', label: 'Mokƒójimo sƒÖlygos' },
];

const DocumentTrainingModal: React.FC<DocumentTrainingModalProps> = ({
  isOpen,
  onClose,
  onSave
}) => {
  const [loading, setLoading] = useState(false);
  const [untrainedAttachments, setUntrainedAttachments] = useState<UntrainedAttachment[]>([]);
  const [selectedAttachment, setSelectedAttachment] = useState<UntrainedAttachment | null>(null);
  const [isFullscreen, setIsFullscreen] = useState(false);
  const [trainingData, setTrainingData] = useState<DocumentTemplate>({
    attachment: 0,
    document_type: 'invoice',
    template_name: '',
    field_mappings: {},
    is_active: true,
  });

  // PDF pa≈æymƒójimo ƒØrankis
  const [markingMode, setMarkingMode] = useState<string | null>(null);
  const [selectedText, setSelectedText] = useState('');

  // PDF viewer su pa≈æymƒójimu
  const [pdfLoading, setPdfLoading] = useState(false);
  const [pdfError, setPdfError] = useState<string | null>(null);
  const [pdfDocument, setPdfDocument] = useState<any>(null);
  const [currentPage, setCurrentPage] = useState(1);
  const [numPages, setNumPages] = useState(0);
  const [markedRegions, setMarkedRegions] = useState<any[]>([]);
  const [isDrawing, setIsDrawing] = useState(false);
  const [startPos, setStartPos] = useState<{x: number, y: number} | null>(null);
  const canvasRef = useRef<HTMLCanvasElement>(null);
  const overlayCanvasRef = useRef<HTMLCanvasElement>(null);


  // U≈ækrauti nepramokytus attachment'us
  const loadUntrainedAttachments = useCallback(async () => {
    try {
      setLoading(true);
      // Naudojame api servisƒÖ kuris automati≈°kai prideda autentifikacijƒÖ
      const response = await api.get('/mail/untrained-attachments/');
      setUntrainedAttachments(response.data.results || response.data);
    } catch (error) {
      console.error('Klaida u≈ækraunant nepramokytus priedus:', error);
      // Fallback duomenys jei API neveikia
      setUntrainedAttachments([
        {
          id: 1,
          filename: 'invoice_001.pdf',
          content_type: 'application/pdf',
          size: 245760,
          mail_message_id: 123,
          mail_message_subject: 'FW: SƒÖskaita u≈æ paslaugas',
          download_url: '/api/mail/attachments/1/download/'
        }
      ]);
    } finally {
      setLoading(false);
    }
  }, []);


  // U≈ækrauname nepramokytus attachment'us kai atsidaro modalas
  useEffect(() => {
    if (isOpen) {
      loadUntrainedAttachments();
    }
  }, [isOpen, loadUntrainedAttachments]);

  const handleAttachmentSelect = (attachment: UntrainedAttachment) => {
    setSelectedAttachment(attachment);
    setTrainingData(prev => ({
      ...prev,
      attachment: attachment.id,
      template_name: attachment.filename.replace('.pdf', '').replace(/_/g, ' ')
    }));
  };

  const handleFieldMapping = (fieldKey: string, value: any) => {
    setTrainingData(prev => ({
      ...prev,
      field_mappings: {
        ...prev.field_mappings,
        [fieldKey]: value
      }
    }));
  };

  const startMarking = (fieldKey: string) => {
    setMarkingMode(fieldKey);
    setSelectedText('');

    // ƒÆjungti pointer events overlay canvas
    if (overlayCanvasRef.current) {
      overlayCanvasRef.current.style.pointerEvents = 'auto';
      overlayCanvasRef.current.style.cursor = 'crosshair';
    }

    console.log(`üéØ Marking mode activated for field: ${fieldKey}`);
  };


  const cancelMarking = () => {
    setMarkingMode(null);
    setSelectedText('');
    setIsDrawing(false);
    setStartPos(null);

    // I≈°jungti pointer events overlay canvas
    if (overlayCanvasRef.current) {
      overlayCanvasRef.current.style.pointerEvents = 'none';
      overlayCanvasRef.current.style.cursor = 'default';
    }

    console.log('Marking mode cancelled');
  };

  const toggleFullscreen = () => {
    setIsFullscreen(!isFullscreen);
  };

  // PDF pa≈æymƒójimo funkcijos
  const loadPdf = useCallback(async (url: string) => {
    if (!url) return;

    try {
      setPdfLoading(true);
      setPdfError(null);

      const response = await fetch(url, {
        headers: {
          'Authorization': `Bearer ${localStorage.getItem('token')}`,
        },
      });

      if (!response.ok) {
        throw new Error(`HTTP ${response.status}: ${response.statusText}`);
      }

      const arrayBuffer = await response.arrayBuffer();
      const loadingTask = pdfjsLib.getDocument({ data: arrayBuffer });
      const pdf = await loadingTask.promise;

      setPdfDocument(pdf);
      setNumPages(pdf.numPages);
      setCurrentPage(1);
      setMarkedRegions([]);

    } catch (error) {
      console.error('Klaida u≈ækraunant PDF:', error);
      setPdfError(error instanceof Error ? error.message : 'Ne≈æinoma klaida');
    } finally {
      setPdfLoading(false);
    }
  }, []);

  const renderPage = useCallback(async (pageNum: number) => {
    if (!pdfDocument || !canvasRef.current || !overlayCanvasRef.current) {
      console.warn('PDF render cancelled - missing dependencies');
      return;
    }

    try {
      console.log(`Rendering PDF page ${pageNum}`);
      const page = await pdfDocument.getPage(pageNum);
      const canvas = canvasRef.current;
      const overlayCanvas = overlayCanvasRef.current;

      if (!canvas || !overlayCanvas) {
        console.error('Canvas elements not found');
        return;
      }

      const context = canvas.getContext('2d');
      const overlayContext = overlayCanvas.getContext('2d');

      if (!context || !overlayContext) {
        console.error('Canvas contexts not available');
        setPdfError('Canvas kontekstas neprieinamas');
        return;
      }

      const containerWidth = canvas.parentElement?.clientWidth || 600;
      if (containerWidth < 100) {
        console.warn('Container width too small:', containerWidth);
        return;
      }

      const viewport = page.getViewport({ scale: 1 });
      if (!viewport || viewport.width === 0) {
        console.error('Invalid viewport');
        setPdfError('Neteisingas PDF viewport');
        return;
      }

      // Padidinti PDF dydƒØ - naudoti beveik visƒÖ plotƒØ ir padidinti 20%
      const baseScale = (containerWidth - 5) / viewport.width;
      const scale = Math.max(baseScale * 1.2, 1.0); // 20% didesnis, bet ne ma≈æesnis nei 1.0

      if (scale <= 0 || !isFinite(scale)) {
        console.error('Invalid scale calculated:', scale);
        setPdfError('Neteisingas skalƒós skaiƒçiavimas');
        return;
      }

      const scaledViewport = page.getViewport({ scale });

      // Nustatome canvas dyd≈æius - u≈ætikrinti kad jie b≈´t≈≥ identi≈°ki
      const canvasHeight = Math.round(scaledViewport.height);
      const canvasWidth = Math.round(scaledViewport.width);

      if (canvasHeight <= 0 || canvasWidth <= 0) {
        console.error('Invalid canvas dimensions:', canvasWidth, canvasHeight);
        setPdfError('Neteisingi canvas matmenys');
        return;
      }

      console.log(`Setting canvas size: ${canvasWidth}x${canvasHeight}`);

      // U≈ætikrinti kad canvas dyd≈æiai b≈´t≈≥ stabil≈´s
      canvas.height = canvasHeight;
      canvas.width = canvasWidth;
      canvas.style.height = canvasHeight + 'px';
      canvas.style.width = canvasWidth + 'px';
      canvas.style.display = 'block';
      canvas.style.margin = '0 auto';

      overlayCanvas.height = canvasHeight;
      overlayCanvas.width = canvasWidth;
      overlayCanvas.style.height = canvasHeight + 'px';
      overlayCanvas.style.width = canvasWidth + 'px';
      overlayCanvas.style.position = 'absolute';
      overlayCanvas.style.top = '0';
      overlayCanvas.style.left = '0';
      overlayCanvas.style.pointerEvents = markingMode ? 'auto' : 'none';

      // Pie≈°iame PDF
      const renderContext = {
        canvasContext: context,
        viewport: scaledViewport,
      };

      console.log('Starting PDF render...');
      await page.render(renderContext).promise;
      console.log('PDF render completed');

      // I≈°valome overlay ir pie≈°iame pa≈æymƒótus regionus
      overlayContext.clearRect(0, 0, overlayCanvas.width, overlayCanvas.height);

      // Pie≈°iame pa≈æymƒótus regionus
      const currentPageRegions = markedRegions.filter(region => region.page === pageNum);
      console.log(`Rendering ${currentPageRegions.length} marked regions for page ${pageNum}`);

      currentPageRegions.forEach((region) => {
        if (region.x >= 0 && region.y >= 0 && region.width > 0 && region.height > 0) {
          overlayContext.fillStyle = 'rgba(40, 167, 69, 0.3)';
          overlayContext.strokeStyle = '#28a745';
          overlayContext.lineWidth = 2;

          overlayContext.fillRect(region.x, region.y, region.width, region.height);
          overlayContext.strokeRect(region.x, region.y, region.width, region.height);

          // Pridedame label
          overlayContext.fillStyle = '#28a745';
          overlayContext.font = '12px Arial';
          overlayContext.fillText(region.label || '', region.x + 5, region.y + 15);
        }
      });

      console.log('PDF page render completed successfully');
      setPdfError(null); // I≈°valyti klaidƒÖ jei buvo

    } catch (error) {
      console.error('Klaida rodant PDF puslapƒØ:', error);
      const errorMessage = error instanceof Error ? error.message : 'Ne≈æinoma klaida';
      setPdfError(`Klaida rodant PDF puslapƒØ: ${errorMessage}`);
    }
  }, [pdfDocument, markedRegions]);

  const startDrawing = (e: React.MouseEvent) => {
    if (!markingMode || !overlayCanvasRef.current) return;

    const overlayCanvas = overlayCanvasRef.current;
    const rect = overlayCanvas.getBoundingClientRect();

    // Perskaiƒçiuoti pradines koordinates ƒØ canvas pixel'us
    const scaleX = overlayCanvas.width / rect.width;
    const scaleY = overlayCanvas.height / rect.height;

    const x = (e.clientX - rect.left) * scaleX;
    const y = (e.clientY - rect.top) * scaleY;

    console.log('Start drawing at:', { mouse: { x: e.clientX - rect.left, y: e.clientY - rect.top }, canvas: { x, y }, scale: { x: scaleX, y: scaleY } });

    setIsDrawing(true);
    setStartPos({ x, y });
  };

  const continueDrawing = (e: React.MouseEvent) => {
    if (!isDrawing || !startPos || !overlayCanvasRef.current) return;

    const overlayCanvas = overlayCanvasRef.current;
    const rect = overlayCanvas.getBoundingClientRect();

    // Perskaiƒçiuoti koordinates ƒØ canvas pixel'us
    const scaleX = overlayCanvas.width / rect.width;
    const scaleY = overlayCanvas.height / rect.height;

    const currentX = (e.clientX - rect.left) * scaleX;
    const currentY = (e.clientY - rect.top) * scaleY;

    const overlayContext = overlayCanvas.getContext('2d');
    if (!overlayContext) return;

    // I≈°valome ir pie≈°iame laikinus pa≈æymƒójimus
    overlayContext.clearRect(0, 0, overlayCanvasRef.current.width, overlayCanvasRef.current.height);

    // Pie≈°iame esamus pa≈æymƒójimus
    markedRegions.forEach(region => {
      if (region.page === currentPage) {
        overlayContext.fillStyle = 'rgba(40, 167, 69, 0.3)';
        overlayContext.strokeStyle = '#28a745';
        overlayContext.lineWidth = 2;
        overlayContext.fillRect(region.x, region.y, region.width, region.height);
        overlayContext.strokeRect(region.x, region.y, region.width, region.height);

        overlayContext.fillStyle = '#28a745';
        overlayContext.font = '12px Arial';
        overlayContext.fillText(region.label, region.x + 5, region.y + 15);
      }
    });

    // Pie≈°iame dabartinƒØ pa≈æymƒójimƒÖ
    const width = currentX - startPos.x;
    const height = currentY - startPos.y;

    overlayContext.fillStyle = 'rgba(255, 193, 7, 0.3)';
    overlayContext.strokeStyle = '#ffc107';
    overlayContext.lineWidth = 2;

    overlayContext.fillRect(startPos.x, startPos.y, width, height);
    overlayContext.strokeRect(startPos.x, startPos.y, width, height);
  };

  const finishDrawing = (e: React.MouseEvent) => {
    if (!isDrawing || !startPos || !markingMode) return;

    const overlayCanvas = overlayCanvasRef.current;
    const mainCanvas = canvasRef.current;
    if (!overlayCanvas || !mainCanvas) return;

    // Naudoti overlay canvas bounding rect - jis turi b≈´ti vir≈° pagrindinio canvas
    const rect = overlayCanvas.getBoundingClientRect();

    // Perskaiƒçiuoti koordinates ƒØ canvas pixel'us
    const scaleX = overlayCanvas.width / rect.width;
    const scaleY = overlayCanvas.height / rect.height;

    const endX = (e.clientX - rect.left) * scaleX;
    const endY = (e.clientY - rect.top) * scaleY;
    const startX = startPos.x * scaleX;
    const startY = startPos.y * scaleY;

    const width = endX - startX;
    const height = endY - startY;

    console.log('Drawing coordinates:', {
      mouseStart: startPos,
      mouseEnd: { x: e.clientX - rect.left, y: e.clientY - rect.top },
      canvasStart: { x: startX, y: startY },
      canvasEnd: { x: endX, y: endY },
      scale: { x: scaleX, y: scaleY },
      rect: rect
    });

    // Tikrinti ar regionas pakankamai didelis
    if (Math.abs(width) > 10 && Math.abs(height) > 10) {
      const fieldLabel = TRAINING_FIELDS.find(f => f.key === markingMode)?.label || markingMode;
      const newRegion = {
        id: Date.now(),
        page: currentPage,
        x: Math.min(startX, endX),
        y: Math.min(startY, endY),
        width: Math.abs(width),
        height: Math.abs(height),
        field: markingMode,
        label: fieldLabel
      };

      console.log('Creating region:', newRegion);

      setMarkedRegions(prev => [...prev, newRegion]);
      handleFieldMapping(markingMode, {
        ...trainingData.field_mappings[markingMode],
        region: newRegion,
        marked: true,
        timestamp: new Date().toISOString()
      });

      console.log(`‚úÖ Regionas pa≈æymƒótas laukui: ${fieldLabel}`);
    } else {
      console.log('Region too small, cancelled');
    }

    setIsDrawing(false);
    setStartPos(null);
    setMarkingMode(null);
  };

  const handleSave = async () => {
    if (!selectedAttachment) return;

    try {
      setLoading(true);
      // I≈°saugome ≈°ablonƒÖ per API
      const response = await api.post('/mail/document-templates/', trainingData);
      console.log('≈†ablonas i≈°saugotas:', response.data);
      alert('Dokument≈≥ ≈°ablonas i≈°saugotas sƒókmingai!');

      if (onSave) onSave();
      onClose();
    } catch (error) {
      console.error('Klaida i≈°saugant ≈°ablonƒÖ:', error);
      alert('Klaida i≈°saugant ≈°ablonƒÖ');
    } finally {
      setLoading(false);
    }
  };

  const resetModal = () => {
    setSelectedAttachment(null);
    setTrainingData({
      attachment: 0,
      document_type: 'invoice',
      template_name: '',
      field_mappings: {},
      is_active: true,
    });
  };

  const handleClose = () => {
    resetModal();
    onClose();
  };

  // U≈ækrauname PDF kai pasikeiƒçia selectedAttachment
  useEffect(() => {
    if (selectedAttachment?.download_url) {
      loadPdf(selectedAttachment.download_url);
    } else {
      setPdfDocument(null);
      setCurrentPage(1);
      setNumPages(0);
      setMarkedRegions([]);
    }
  }, [selectedAttachment, loadPdf]);

  // Rodome puslapƒØ kai pasikeiƒçia currentPage arba pdfDocument arba markedRegions
  useEffect(() => {
    if (pdfDocument && currentPage) {
      renderPage(currentPage);
    }
  }, [pdfDocument, currentPage, renderPage, markedRegions]);

  // Resize handler - perrenderinti kai modal'as keiƒçia dydƒØ
  useEffect(() => {
    const handleResize = () => {
      if (pdfDocument && currentPage) {
        renderPage(currentPage);
      }
    };

    window.addEventListener('resize', handleResize);
    return () => window.removeEventListener('resize', handleResize);
  }, [pdfDocument, currentPage, renderPage]);

  // Scroll handler - i≈°jungtas, nes sukelia problemas
  // PDF dydis turi likti stabilus nepriklausomai nuo scroll pozicijos
  /*
  useEffect(() => {
    let scrollTimeout: NodeJS.Timeout;

    const handleScroll = () => {
      clearTimeout(scrollTimeout);
      scrollTimeout = setTimeout(() => {
        console.log('Scroll detected - skipping PDF re-render');
        // Daugiau neperrenderiname PDF dƒól scroll
      }, 150);
    };

    const modalElement = document.querySelector('.document-training-modal .modal-body');
    if (modalElement) {
      modalElement.addEventListener('scroll', handleScroll, { passive: true });
      return () => {
        modalElement.removeEventListener('scroll', handleScroll);
        clearTimeout(scrollTimeout);
      };
    }
  }, []);
  */

  if (!isOpen) return null;

  return (
    <div className={`modal-overlay ${isFullscreen ? 'fullscreen' : ''}`} onClick={handleClose}>
      <div className={`modal-content large-modal document-training-modal ${isFullscreen ? 'fullscreen' : ''} single-modal`} onClick={e => e.stopPropagation()}>
        <div className="modal-header">
          <h2>üìÑ Dokument≈≥ Mokymo Sistema</h2>
          <div className="modal-actions">
            {selectedAttachment && (
              <button
                onClick={() => setSelectedAttachment(null)}
                className="btn btn-sm btn-outline-secondary back-btn"
                title="GrƒØ≈æti ƒØ dokument≈≥ sƒÖra≈°ƒÖ"
              >
                ‚Üê SƒÖra≈°as
              </button>
            )}
            <button className="modal-close" onClick={handleClose} title="U≈ædaryti">√ó</button>
          </div>
        </div>

        <div className="modal-body single-modal-body">
          {!selectedAttachment ? (
            // 1. Pried≈≥ sƒÖra≈°as
            <div>
              <div className="section-header">
                <h3>üìé Neapmokyti dokumentai</h3>
                <div className="section-stats">
                  <span className="badge badge-info">
                    {untrainedAttachments.length} dokument≈≥ laukia mokymo
                  </span>
                </div>
              </div>
              <p className="text-muted">
                Pasirinkite PDF dokumentƒÖ i≈° sƒÖra≈°o ≈æemiau. Sistema i≈°moks atpa≈æinti pana≈°ius dokumentus ateityje.
              </p>

              {loading ? (
                <div className="text-center">Kraunama...</div>
              ) : untrainedAttachments.length === 0 ? (
                <div className="text-center text-muted">
                  üéâ Visi dokumentai jau apmokyti!
                </div>
              ) : (
                <div className="attachments-grid">
                  {untrainedAttachments.map(attachment => (
                    <div
                      key={attachment.id}
                      className="attachment-card"
                      onClick={() => handleAttachmentSelect(attachment)}
                    >
                      <div className="attachment-icon">üìÑ</div>
                      <div className="attachment-info">
                        <h5 className="attachment-name">{attachment.filename}</h5>
                        <div className="attachment-meta">
                          <span className="size">{(attachment.size / 1024).toFixed(1)} KB</span>
                          <span className="separator">‚Ä¢</span>
                          <span className="subject" title={attachment.mail_message_subject}>
                            {attachment.mail_message_subject?.substring(0, 40)}...
                          </span>
                        </div>
                      </div>
                      <div className="attachment-action">
                        <button className="btn btn-primary btn-sm">
                          Apmokyti ‚Üí
                        </button>
                      </div>
                    </div>
                  ))}
                </div>
              )}
            </div>
          ) : (
            // 2. Mokymo ƒØrankis
            <div>
              <div className="section-header">
                <h3>üéì Mokymo re≈æimas</h3>
                <div className="section-stats">
                  <span className="badge badge-success">
                    Apmokomas: {selectedAttachment.filename}
                  </span>
                </div>
              </div>
              <div className="training-instructions">
                <div className="instruction-card">
                  <div className="instruction-icon">üìñ</div>
                  <div className="instruction-content">
                    <h5>Kaip mokyti sistemƒÖ?</h5>
                    <ol>
                      <li>Atidarykite PDF dokumentƒÖ naujame lange</li>
                      <li>Raskite kiekvieno lauko pozicijƒÖ dokumente</li>
                      <li>ƒÆveskite lauk≈≥ reik≈°mes arba pozicijas ≈æemiau</li>
                      <li>I≈°saugokite ≈°ablonƒÖ - sistema i≈°moks!</li>
                    </ol>
                  </div>
                </div>
              </div>

              {/* Dokument≈≥ per≈æi≈´ra - tiesiogiai modale */}
              <div className="pdf-header">
                <h4>üìÑ {selectedAttachment.filename}</h4>
                <div className="pdf-actions">
                  <span className="file-size">{(selectedAttachment.size / 1024).toFixed(1)} KB</span>
                  <button
                    onClick={toggleFullscreen}
                    className="btn btn-sm btn-outline-primary"
                    title={isFullscreen ? "I≈°eiti i≈° pilno ekrano" : "Pilnas ekranas"}
                  >
                    {isFullscreen ? 'ü™ü' : '‚õ∂'}
                  </button>
                  <a
                    href={selectedAttachment.download_url}
                    target="_blank"
                    rel="noopener noreferrer"
                    className="btn btn-sm btn-outline-secondary"
                    title="Atidaryti naujame lange"
                  >
                    üîç
                  </a>
                </div>
              </div>

              {pdfLoading ? (
                <div className="pdf-loading">
                  <div className="loading-spinner"></div>
                  <p>Kraunamas PDF dokumentas...</p>
                </div>
              ) : pdfError ? (
                <div className="pdf-error">
                  <div className="pdf-icon">‚ùå</div>
                  <p>Klaida: {pdfError}</p>
                  <button
                    className="btn btn-sm btn-outline-primary"
                    onClick={() => window.open(selectedAttachment?.download_url, '_blank')}
                  >
                    Atidaryti naujame lange
                  </button>
                </div>
              ) : (
                <div className="pdf-canvas-container">
                  <canvas ref={canvasRef} className="pdf-canvas" />
                  <canvas
                    ref={overlayCanvasRef}
                    className="pdf-overlay-canvas"
                    onMouseDown={startDrawing}
                    onMouseMove={continueDrawing}
                    onMouseUp={finishDrawing}
                  />
                  {numPages > 1 && (
                    <div className="pdf-navigation">
                      <button
                        className="btn btn-sm btn-outline-secondary"
                        onClick={() => setCurrentPage(prev => Math.max(1, prev - 1))}
                        disabled={currentPage <= 1}
                      >
                        ‚Äπ Ankstesnis
                      </button>
                      <span className="page-info">
                        Puslapis {currentPage} i≈° {numPages}
                      </span>
                      <button
                        className="btn btn-sm btn-outline-secondary"
                        onClick={() => setCurrentPage(prev => Math.min(numPages, prev + 1))}
                        disabled={currentPage >= numPages}
                      >
                        Kitas ‚Ä∫
                      </button>
                    </div>
                  )}
                </div>
              )}

              {/* ≈†ablono nustatymai - po PDF */}
              <div className="training-layout">
                <div className="training-main">
                  <div className="training-sidebar">
                  <div className="form-section">
                    <h4>üìã ≈†ablono informacija</h4>
                    <div className="form-group">
                      <label>≈†ablono pavadinimas:</label>
                      <input
                        type="text"
                        className="form-control"
                        value={trainingData.template_name}
                        onChange={(e) => setTrainingData(prev => ({ ...prev, template_name: e.target.value }))}
                        placeholder="Pvz.: UAB Loglena sƒÖskaitos ≈°ablonas"
                      />
                    </div>

                    <div className="form-group">
                      <label>Dokumento tipas:</label>
                      <select
                        className="form-control"
                        value={trainingData.document_type}
                        onChange={(e) => setTrainingData(prev => ({ ...prev, document_type: e.target.value as any }))}
                      >
                        {DOCUMENT_TYPES.map(type => (
                          <option key={type.value} value={type.value}>{type.label}</option>
                        ))}
                      </select>
                    </div>
                  </div>

                  <div className="form-section">
                    <h4>üéØ Lauk≈≥ ≈æymƒójimas</h4>
                    <p className="text-muted" style={{ fontSize: '12px', marginBottom: '15px' }}>
                      ƒÆveskite lauk≈≥ reik≈°mes arba naudokite pa≈æymƒójimo ƒØrankƒØ.
                    </p>

                  <div className="field-mapping-grid">
                    {TRAINING_FIELDS.map(field => (
                      <div key={field.key} className={`field-item ${markingMode === field.key ? 'marking-active' : ''}`}>
                        <label className="field-label">
                          {field.label}
                          {trainingData.field_mappings[field.key]?.marked && (
                            <span className="marked-indicator" title="Pa≈æymƒóta">‚úì</span>
                          )}
                        </label>

                        {markingMode === field.key ? (
                          <div className="marking-controls">
                            <div className="marking-active-notice">
                              <div className="marking-indicator">
                                <span className="marking-dot"></span>
                                <span>Pa≈æymƒójimo re≈æimas aktyvus</span>
                              </div>
                              <button
                                className="btn btn-sm btn-secondary marking-cancel"
                                onClick={cancelMarking}
                                title="At≈°aukti pa≈æymƒójimƒÖ"
                              >
                                ‚úï At≈°aukti
                              </button>
                            </div>
                            <div className="marking-hint">
                              <small>üéØ Spauskite ir tempkite ant PDF, kad pa≈æymƒótumƒóte regionƒÖ</small>
                            </div>
                          </div>
                        ) : (
                          <div className="field-input-group">
                            <input
                              type="text"
                              className="form-control form-control-sm"
                              placeholder="ƒÆveskite reik≈°mƒô..."
                              value={trainingData.field_mappings[field.key]?.text || trainingData.field_mappings[field.key]?.position || ''}
                              onChange={(e) => handleFieldMapping(field.key, { ...trainingData.field_mappings[field.key], text: e.target.value })}
                            />
                            <button
                              className="btn btn-sm btn-outline-secondary btn-mark-field"
                              onClick={() => startMarking(field.key)}
                              title={`Pa≈æymƒóti ${field.label} PDF dokumente`}
                            >
                              üéØ
                            </button>
                          </div>
                        )}
                      </div>
                    ))}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          )}
        </div>

        <div className="modal-footer">
          {selectedAttachment ? (
            <>
              <button
                className="btn btn-secondary"
                onClick={() => setSelectedAttachment(null)}
                disabled={loading}
              >
                ‚Üê Atgal
              </button>
              <button
                className="btn btn-primary"
                onClick={handleSave}
                disabled={loading}
              >
                {loading ? 'Saugoma...' : 'üíæ I≈°saugoti ≈°ablonƒÖ'}
              </button>
            </>
          ) : (
            <button className="btn btn-secondary" onClick={handleClose}>
              U≈ædaryti
            </button>
          )}
        </div>
      </div>
    </div>
  );
};

